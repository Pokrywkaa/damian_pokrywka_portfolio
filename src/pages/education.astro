---
import Layout from '@layouts/Layout.astro';
import EducationCard from '@components/EducationCard.astro';
import { education } from '@data/education';
---

<Layout title="Education - Portfolio" description="Academic background and qualifications">
  <section class="section">
    <div class="container">
      <h1 class="section-title animate-fade-in">Education</h1>
      
      <div class="education-list">
        {education.map((edu, index) => (
          <div style={`animation-delay: ${index * 0.15}s`}>
            <EducationCard education={edu} />
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .education-list {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }
  
  .education-list > div {
    animation: fadeIn 0.6s ease forwards;
    opacity: 0;
  }
</style>
