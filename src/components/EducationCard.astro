---
import type { Education } from '@data/education';

export interface Props {
  education: Education;
}

const { education } = Astro.props;
---

<article class="education-card card animate-fade-in">
  <div class="education-header">
    <div>
      <h3 class="education-degree">{education.degree}</h3>
      <p class="education-institution">{education.institution}</p>
      <p class="education-location">{education.location}</p>
    </div>
    <span class="education-years">
      {education.startYear} - {education.endYear}
    </span>
  </div>
  
  {education.description && (
    <p class="education-description">{education.description}</p>
  )}
  
  {education.achievements && education.achievements.length > 0 && (
    <ul class="education-achievements">
      {education.achievements.map(achievement => (
        <li>{achievement}</li>
      ))}
    </ul>
  )}
</article>

<style>
  .education-card {
    position: relative;
  }
  
  .education-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-sm);
    gap: var(--spacing-md);
  }
  
  .education-degree {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }
  
  .education-institution {
    color: var(--accent-primary);
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }
  
  .education-location {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }
  
  .education-years {
    color: var(--text-secondary);
    font-size: 0.875rem;
    white-space: nowrap;
    font-weight: 500;
  }
  
  .education-description {
    color: var(--text-secondary);
    margin: var(--spacing-sm) 0;
    line-height: 1.6;
  }
  
  .education-achievements {
    margin-top: var(--spacing-md);
    padding-left: var(--spacing-lg);
    color: var(--text-secondary);
  }
  
  .education-achievements li {
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }
  
  .education-achievements li::marker {
    color: var(--accent-primary);
  }
  
  @media (max-width: 768px) {
    .education-header {
      flex-direction: column;
      gap: var(--spacing-xs);
    }
    
    .education-years {
      font-size: 0.8rem;
    }
  }
</style>
